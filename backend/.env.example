# ===========================================
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# MongoDB Atlas Connection
# Create free tier at: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/ticket_app

# JWT Secret Key
# Generate a strong random string (e.g., use: openssl rand -base64 32)
JWT_SECRET=replace_with_your_secure_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Gmail Configuration for Nodemailer
# Required for email notifications (booking confirmations, etc.)
# 
# To get Gmail App Password:
# 1. Enable 2-Step Verification on your Google Account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Select "Mail" and generate a new app password
# 4. Copy the 16-character password (without spaces)
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password

# Midtrans Payment Gateway (Sandbox)
# Get credentials from: https://dashboard.sandbox.midtrans.com
# 1. Sign up for a free sandbox account
# 2. Go to Settings > Access Keys
# 3. Copy Server Key and Client Key
MIDTRANS_SERVER_KEY=Mid-server-YOUR_SERVER_KEY_HERE
MIDTRANS_CLIENT_KEY=Mid-client-YOUR_CLIENT_KEY_HERE
MIDTRANS_IS_PRODUCTION=false

# Frontend URL (for CORS and email redirect links)
FRONTEND_URL=http://localhost:4200

