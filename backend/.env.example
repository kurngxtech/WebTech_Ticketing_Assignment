# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ems_db?retryWrites=true&w=majority

# JWT Secret Key (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Server Configuration
PORT=5000
NODE_ENV=development

# Gmail Configuration for Nodemailer
# To get App Password:
# 1. Enable 2FA on your Gmail account
# 2. Go to Google Account > Security > 2-Step Verification > App passwords
# 3. Generate a new app password for "Mail"
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# Midtrans Sandbox Configuration
# Get these from https://dashboard.sandbox.midtrans.com
MIDTRANS_SERVER_KEY=SB-Mid-server-xxxxxxxxxxxxxxxxxxxxxxxx
MIDTRANS_CLIENT_KEY=SB-Mid-client-xxxxxxxxxxxxxxxxxxxxxxxx
MIDTRANS_IS_PRODUCTION=false

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:4200
